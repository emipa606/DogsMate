<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="DankPyon_Direwolf"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/Revolus.DogsMate.AnimalGroupDef[defName="Wolf"]/pawnKinds</xpath>
          <value>
            <li>DankPyon_Direwolf</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/Revolus.DogsMate.AnimalGroupDef[defName="Hyena"]/pawnKinds</xpath>
          <value>
            <li>DankPyon_Hyena</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/Revolus.DogsMate.AnimalGroupDef[defName="Bison"]/pawnKinds</xpath>
          <value>
            <li>DankPyon_Rox</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/Revolus.DogsMate.AnimalGroupDef[defName="Pig"]/pawnKinds</xpath>
          <value>
            <li>DankPyon_Hampshire</li>
            <li>DankPyon_Gloucestershire</li>
            <li>DankPyon_NorthernBoar</li>
            <li>DankPyon_DireBoar</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/Revolus.DogsMate.AnimalGroupDef[defName="Cow"]/pawnKinds</xpath>
          <value>
            <li>DankPyon_Ravelder</li>
            <li>DankPyon_Angus</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
